#!/bin/bash
#Author: Dharmendra Gupta
#Date Created: 25th Sep 2025

#Exit if error
set -e

# Directories to back up
SOURCE=("/home/kishan/imp" 
"/tmp/documents")

BACKUP_DIR="/home/kishan/backups"
DATE=$(date +%Y-%m-%d_%H-%M-%S)
BACKUP_FILE="important_backup_$DATE.tar.gz"
LOG_FILE="/home/kishan/backups/backup_script.log"

#Create Backup
mkdir -p "$BACKUP_DIR"

# Logging Starts
echo "[$(date)] Starting backup | tee -a $LOG_FILE"

# Create tar.gz archive of selected directories
tar -czf "$BACKUP_DIR/$BACKUP_FILE" "${SOURCE[@]}"

echo "Backup completed: $BACKUP_FILE | tee -a $LOG_FILE"

